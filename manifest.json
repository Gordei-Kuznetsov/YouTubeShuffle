{
    "manifest_version": 3,
    "name": "YouTube Shuffle",
    "description": "Shuffle your playlists in YouTube randomly",
    "version": "1.0",
    "permissions": [
        "storage",
        "scripting"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
    },
    "content_scripts": [
      {
        "name": "PLAYLIST_PAGE",
        "js": ["scripts/playlist.js"],
        "run_at": "document_end",
        "matches": [
          "https://www.youtube.com/playlist?list=*"
        ]
      },
      {
        "name": "WATCH_PAGE",
        "js": ["scripts/watch.js"],
        "run_at": "document_end",
        "matches": [
          "https://www.youtube.com/watch?*list=*"
        ]
      },
      {
        "name": "GENERAL_PAGE",
        "js": ["scripts/general.js"],
        "run_at": "document_end",
        "matches": [
          "https://www.youtube.com/*"
        ],
        "exclude_matches": [
          "https://www.youtube.com/playlist?list=*",
          "https://www.youtube.com/watch?*list=*"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [ "common/*" ],
        "matches": [
          "https://www.youtube.com/*"
        ]
      }
    ]
  }